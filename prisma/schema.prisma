generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  name     String
  email    String   @unique
  password String
  contact  String
  Rifas    Raffle[]

  @@map("users")
}

model Raffle {
  User               User?                  @relation(fields: [userId], references: [id])
  userId             String?
  id                 Int                    @id @default(autoincrement())
  titulo             String
  Categorias         Category[]
  local              String
  prazo_expiracao    DateTime
  dia_sorteio        DateTime?
  Cotas              Quota[]
  preco_cota         Float
  limite_cota_user   Int
  telefone_suporte   String
  descricao          String
  img_premio         String
  link_grupo         String
  Tipos_rifa         TypeRaffle[]
  Tipos_exibicao     TypeDisplay[]
  Requisitos_reserva BookingRequeriements[]
  premios            String[]
  promocoes          Json[]

  @@map("raffles")
}

model Category {
  id        Int      @id @default(autoincrement())
  categoria String
  Rifas     Raffle[]

  @@map("categories")
}

model Quota {
  id                Int     @id @default(autoincrement())
  cota              BigInt
  comprador         String?
  contato_comprador String?
  email_comprador   String?
  Rifas             Raffle? @relation(fields: [rifaId], references: [id])
  rifaId            Int?

  @@map("quotas")
}

model TypeRaffle {
  id           Int      @id @default(autoincrement())
  tipo_sorteio String
  Rifas        Raffle[]

  @@map("typeRaffle")
}

model TypeDisplay {
  id            Int      @id @default(autoincrement())
  tipo_exibicao String
  Rifas         Raffle[]

  @@map("typeDisplay")
}

model BookingRequeriements {
  id                 Int      @id @default(autoincrement())
  requisitos_reserva String
  Rifas              Raffle[]

  @@map("bookingRequirements")
}

